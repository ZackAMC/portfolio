---
import ItemContacto from "@/components/ItemContacto.astro"
import Formulario from "@/components/Formulario.astro"
import Linkedin from "@/img/LinkedinImg.astro"
import Github from "@/img/Github.astro"
import Correo from "@/img/MailImg.astro"
import PuntosContact from "@/img/PuntosContact.astro"
import ManchaContact from "@/img/ManchaContact.astro"
---

<section
    id="contacto"
    class=" mt-28 mb-64"
>
    <main>
        <h2
            class=" relative pb-2 mb-14 text-4xl font-['MuseoModerno'] before:content-[''] before:w-[140px] before:h-[3px] before:rounded before:bg-[#FF6025] before:absolute before:bottom-0 before:left-0 font-bold text-stone-900"
        >
            Cont√°ctame
        </h2>

        <div class="relative">
            <div class="
                    shadow-xl
                    rounded-xl
                    p-9
                    w-full
                    lg:w-9/12
                    lg:pr-32
                     pb-16
                     lg:pb-0
                ">
                <Formulario />
            </div>

            <div class=" -z-0 relative lg:absolute lg:top-1/2 lg:translate-y-[-50%] bg-[#1c1c1c] lg:right-0 h-auto rounded-2xl lg:w-4/12 overflow-hidden p-10 w-80 mx-auto lg:mx-0 -mt-8 lg:-mt-0">

                <PuntosContact />
                <ManchaContact />

                <ul class=" flex flex-col h-full justify-center" >
                    <ItemContacto
                        link="https://www.linkedin.com/in/andres-mila/"
                    >
                        <div class=" p-2 bg-white/30 w-12 h-12 flex items-center content-center rounded-lg mr-3">
                            <Linkedin />
                        </div>
                        <span class="flex items-center text-lg font-bold">Linkedin</span>
                    </ItemContacto>

                    <ItemContacto
                        link="https://github.com/ZackAMC"
                    >
                        <div class=" p-2 bg-white/30 w-12 h-12 flex items-center content-center rounded-lg mr-3">
                            <Github />
                        </div>
                        <span class="flex items-center text-lg font-bold">GitHub</span>
                    </ItemContacto>

                    <ItemContacto
                        link="mailto:andresmila01@gmail.com"
                    >
                        <div class=" p-2 bg-white/30 w-12 h-12 flex items-center content-center rounded-lg mr-3">
                            <Correo />
                        </div>
                        <span class="flex items-center text-lg font-bold">Correo</span>
                    </ItemContacto>
                </ul>
            </div>
        </div>

    </main>
</section>